    <artifactId>tutorial-process</artifactId>
    <version>1.2.0.0-SNAPSHOT</version>
    <description>A process for the DSF process tutorial</description>

    <properties>
        <compileSource>25</compileSource>
        <compileTarget>25</compileTarget>

        <main.basedir>${project.basedir}</main.basedir>
        <dsf.version>2.0.2</dsf.version>
        <slf4j.version>2.0.9</slf4j.version>
        <log4j.version>2.22.0</log4j.version>
